 .../android/java/res/xml/main_preferences.xml | 26 +++++++++++++------
 1 file changed, 18 insertions(+), 8 deletions(-)

diff --git a/chrome/android/java/res/xml/main_preferences.xml b/chrome/android/java/res/xml/main_preferences.xml
index f032c32654c47..c2dbf53a9a75e 100644
--- a/chrome/android/java/res/xml/main_preferences.xml
+++ b/chrome/android/java/res/xml/main_preferences.xml
@@ -17,23 +17,26 @@ for the previous order (main_preferences_legacy). -->
     <PreferenceCategory
         android:key="account_and_google_services_section"
         android:order="1"
-        android:title="@string/prefs_section_account_and_google_services"/>
+        android:title="@string/prefs_section_account_and_google_services"
+        app:isPreferenceVisible="false"/>
